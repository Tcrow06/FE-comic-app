<?xml version="1.0" encoding="utf-8"?>

<resources>
    <style name="BottomNavigationTextAppearance" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TopRoundedCard" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopLeft">24dp</item>
        <item name="cornerSizeTopRight">24dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
    </style>

    <style name="TabTextStyle" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">18sp</item> <!-- Tăng kích thước ở đây -->
        <item name="android:textColor">?attr/colorOnSurface</item> <!-- hoặc @color/... -->
        <item name="textAllCaps">false</item>
    </style>


</resources>


